{
  // Python
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  // "python.formatting.blackPath": "black",
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": true,
  // Java
  "java.configuration.runtimes": [
    {
      "name": "JavaSE",
      //"path": "/usr/bin/jvm/",
      "path": "/usr/lib/jvm/java-11-openjdk-11.0.20.0.8-1.fc38.x86_64/",
      "default": true
    }
  ],
  // Snippets
  "snippets.priority": 1,
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets/ultisnips",
  "snippets.shortcut": "S",
  "snippets.autoTrigger": true,
  "snippets.triggerCharacters": [],
  "snippets.loadFromExtensions": true,
  "snippets.textmateSnippetsRoots": ["~/.config/nvim/snippets/vscode"],
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.usePythonx": true,
  "snippets.ultisnips.directories": ["ultisnips"],
  "snippets.snipmate.enable": true,
  "snippets.snipmate.author": "josuerom"
}
