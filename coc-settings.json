{
  // Java
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-21",
      "path": "/usr/lib/jvm/java-21-openjdk-21.0.16.0.8-1.fc37.x86_64/",
      "default": true
    }
  ],

  // Python
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  // "python.formatting.blackPath": "black",
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": true,

  // Snippets
  "snippets.priority": 1,
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "snippets.userSnippetsDirectory": "~/workspace/nvim/snippets/ultisnips",
  "snippets.shortcut": "S",
  "snippets.autoTrigger": true,
  "snippets.triggerCharacters": [],
  "snippets.loadFromExtensions": true,
  "snippets.textmateSnippetsRoots": ["~/workspace/nvim/snippets/vscode"],
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.usePythonx": true,
  "snippets.ultisnips.directories": ["ultisnips"],
  "snippets.snipmate.enable": true,
  "snippets.snipmate.author": "josuerom"
}